// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Gender {
  BOY
  GIRL
}

model NameSuggestion {
  id          String   @id @default(cuid())
  name        String   @unique
  meaning     String
  gender      Gender 
  suggestedBy String
  votes       Vote[]
  createdAt   DateTime @default(now())
}

model Vote {
  id               String         @id @default(cuid())
  voterFingerprint String         // Unique ID from the user's browser
  nameSuggestion   NameSuggestion @relation(fields: [nameId], references: [id])
  nameId           String

  @@unique([voterFingerprint, nameId]) // This prevents duplicate votes
}